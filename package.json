{
    "name": "deojs-starter-project",
    "version": "1.0.0",
    "description": "A simple deojs starter project",
    "main": "index.js",
    "scripts": {
        "start": "deojs-cli start",
        "dev": "deojs-cli start",
        "build": "deojs-cli build",
        "test": "jest --verbose",
        "test:watch": "jest --watch --verbose",
        "test:cov": "jest --coverage --verbose",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "deojs": "^1.0.2",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@jest/globals": "^29.4.0",
        "@types/jest": "^29.4.0",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.4.0",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.4",
        "deojs-cli": "^1.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".*\\.(test|spec)\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
